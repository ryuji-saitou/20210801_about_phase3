<!DOCTYPE html>
<html>
  <head>
    <title>My Luxury Time</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--JavaScriptエラーが生じるため "turbolink" 無効化-->
    <!--<#%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>-->
    <!--<#%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>-->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      (function(d) {
        var config = {
          kitId: 'njk0tew',
          scriptTimeout: 3000,
          async: true
        },
        h=d.documentElement,t=setTimeout(function(){h.className=h.className.replace(/\bwf-loading\b/g,"")+" wf-inactive";},config.scriptTimeout),tk=d.createElement("script"),f=false,s=d.getElementsByTagName("script")[0],a;h.className+=" wf-loading";tk.src='https://use.typekit.net/'+config.kitId+'.js';tk.async=true;tk.onload=tk.onreadystatechange=function(){a=this.readyState;if(f||a&&a!="complete"&&a!="loaded")return;f=true;clearTimeout(t);try{Typekit.load(config)}catch(e){}};s.parentNode.insertBefore(tk,s)
      })(document);
    </script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand bg-light">
        <%= link_to "my luxury time", root_path, class:"navbar-brand text-dark strong" %>
        <% if user_signed_in? %>
          <div class="navbar-nav mr-auto">
            <%= link_to "Home", root_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "About", about_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Ranking", rankings_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "New post", new_post_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Search", search_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
          </div>
          <div class="navbar-nav">
            <%= link_to "My page", user_path(current_user.id), class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Notice", user_notifications_path(current_user.id), class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-item nav-link text-dark border rounded mx-2" %>
          </div>
        <% else %>
          <div class="navbar-nav mr-auto">
            <%= link_to "Home", root_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "About", about_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Ranking", rankings_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
          </div>
          <div class="navbar-nav">
            <%= link_to "Log in", new_user_session_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
            <%= link_to "Sign up", new_user_registration_path, class:"nav-item nav-link text-dark border rounded mx-2" %>
          </div>
        <% end %>
      </nav>
    </header>

    <p class="text-center bg-info text-white"><%= notice %></p>
    <p class="text-center bg-danger"><%= alert %></p>
    <%= yield %>

    <footer class="bg-light text-center py-3 mt-3">
      <span>footer</span>
    </footer>

    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
  </body>
</html>
