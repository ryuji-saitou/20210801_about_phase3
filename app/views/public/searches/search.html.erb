<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h3>Search</h3>
      <div class="border p-3">
        <h5><strong>検索条件</strong></h5>

        <!--▼検索条件-->
        <div class="mt-3">
          <%= form_with url: search_result_path, method: :post, local: true do |f| %>
            <%= f.label "■検索対象：", class:"col-4 p-0" %>
            <%= f.radio_button :search_target, :post, onclick:"radio_search_target()", checked: true, class:"ml-2" %>
            <%= f.label :search_target, "投稿", {value: :post}  %>
            <%= f.radio_button :search_target, :user, onclick:"radio_search_target()", class:"ml-2" %>
            <%= f.label :search_target, "ユーザー", {value: :user}  %>

            <!--▼post検索条件-->
            <div id="hidden1">
              <div class="form-group row">
                <%= f.label :search_keyword, "■キーワード：", class:"col-form-label col-4" %>
                <%= f.text_field :search_targe, class:"form-control col-7" %>
              </div>
              <div class="form-group row">
                <%= f.label :search_time_required, "■所要時間：", class:"col-form-label col-4" %>
                <%= f.number_field :search_time_required, class:"form-control col-7" %>
              </div>
              <div class="form-group row">
                <%= f.label :search_budget, "■予算：", class:"col-form-label col-4" %>
                <%= f.number_field :search_budget, class:"form-control col-7" %>
              </div>
              <div class="form-group row">
                <%= f.label :search_year_month, "■投稿年月：", class:"col-form-label col-4" %>
                <%= f.number_field :search_year_month, class:"form-control col-7" %>
              </div>
            </div>
            <!--▲post検索条件-->

            <!--▼user検索条件-->
            <div id="hidden2">
              <div class="form-group row">
                <%= f.label :search_keyword, "■キーワード：", class:"col-form-label col-4" %>
                <%= f.text_field :search_targe, class:"form-control col-7" %>
              </div>
              <div class="form-group row">
                <%= f.label :how_old, "■年齢：", class:"col-form-label col-4" %>
                <%= f.number_field :how_old, class:"form-control col-7" %>
              </div>
            </div>
            <!--▲user検索条件-->

            <div class="action">
              <%= f.submit "検索", class:"btn btn-sm btn-info" %>
            </div>
          <% end %>
        </div>
        <!--▲検索条件-->

      </div>
      <div class="py-3"><!--上下余白div--></div>
      <% if @user.blank? %>
        <p class="text-center">検索条件を選択してください</p>
      <% else %>
        <div class="border p-3">
          <h5><strong>検索結果</strong></h5>
          <p>検索結果ソート項目</p>
          <p>検索結果表示</p>
        </div>
      <% end %>
    </div>
  </div>
</div>