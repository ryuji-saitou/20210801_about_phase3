<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h3>Home</h3>
      <% if user_signed_in? %>

      <!--▼ログイン済ユーザ表示内容-->
        <div class="border p-3 text-center">
          <div class="row">
            <div class="col-auto mx-auto">
              <span>ユーザー名：<%= current_user.user_name %></span><br>
              <span class="small text-secondary">ユーザーID：<%= current_user.user_name_id %></span>
            </div>
            <div class="col-auto mx-auto">
              <span>フォロー　：xx名</span><br>
              <span>フォロワー：xx名</span>
            </div>
          </div>
        </div>
        <div class="py-3"></div>

        <!--▼タブ内容-->
        <div class="nav-flame border p-3">

          <!--▼タブタイトル-->
          <ul class="nav nav-tabs nav-justified mx-auto">
            <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">タイムライン</a></li>
            <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">最新投稿</a></li>
          </ul>
          <!--▲タブタイトル-->

          <!--▼タブ詳細-->
          <div class="tab-content">

            <!--▼タイムライン投稿表示-->
            <div id="tab1" class="tab-pane active">
              <% @posts.each do |post| %>
                <%= link_to post_path(post.id) do %>
                  <div class="row border-bottom py-3">
                    <div class="col-auto">
                      <%= attachment_image_tag post.user, :profile_image, :fill, 80, 80, fallback: "user/no_image.jpg", size:'80x80' %>
                    </div>
                    <div class="col-auto">
                      <div class="row">
                        <div class="col">
                          <%= post.user.user_name %>
                          <span class="small text-secondary">　(<%= post.user.user_name_id %>)</span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span><%= post.action %></span><br>
                          <span class="small">予算：<%= post.time_required %></span>
                          <span class="small"> / </span>
                          <span class="small">所要時間：<%= post.budget %></span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span>コメント： xx 件</span>
                          <span> / </span>
                          <span>いいね： xx 件</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <%= attachment_image_tag post, :post_image, :fill, 100, 100 %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <!--▲タイムライン投稿表示-->

            <!--▼最新投稿表示-->
            <div id="tab2" class="tab-pane">
              <% @posts.each do |post| %>
                <%= link_to post_path(post.id) do %>
                  <div class="row border-bottom py-3">
                    <div class="col-auto">
                      <%= attachment_image_tag post.user, :profile_image, :fill, 80, 80, fallback: "user/no_image.jpg", size:'80x80' %>
                    </div>
                    <div class="col-auto">
                      <div class="row">
                        <div class="col">
                          <%= post.user.user_name %>
                          <span class="small text-secondary">　(<%= post.user.user_name_id %>)</span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span><%= post.action %></span><br>
                          <span class="small">予算：<%= post.time_required %></span>
                          <span class="small"> / </span>
                          <span class="small">所要時間：<%= post.budget %></span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span>コメント： xx 件</span>
                          <span> / </span>
                          <span>いいね： xx 件</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <%= attachment_image_tag post, :post_image, :fill, 100, 100 %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <!--▲最新投稿表示-->

          </div>
          <!--▲タブ詳細-->

        </div>
        <!--▲タブ内容-->

      <!--▲ログインユーザ表示内容-->
      <% else %>
      <!--▼未ログインユーザ表示内容-->

        <!--▼タブ内容-->
        <div class="nav-flame border p-3">

          <!--▼タブ表題-->
          <ul class="nav nav-tabs nav-justified mx-auto">
            <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">最新投稿</a></li>
          </ul>
          <!--▲タブ表題-->

          <!--▼タブ詳細-->
          <div class="tab-content">
            <div id="tab1" class="tab-pane active">

              <!--▼最新投稿表示-->
              <% @posts.each do |post| %>
                <%= link_to post_path(post.id) do %>
                  <div class="row border-bottom py-3">
                    <div class="col-auto">
                      <%= attachment_image_tag post.user, :profile_image, :fill, 80, 80, fallback: "user/no_image.jpg", size:'80x80' %>
                    </div>
                    <div class="col-auto">
                      <div class="row">
                        <div class="col">
                          <%= post.user.user_name %>
                          <span class="small text-secondary">　(<%= post.user.user_name_id %>)</span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span><%= post.action %></span><br>
                          <span class="small">予算：<%= post.time_required %></span>
                          <span class="small"> / </span>
                          <span class="small">所要時間：<%= post.budget %></span>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col">
                          <span>コメント： xx 件</span>
                          <span> / </span>
                          <span>いいね： xx 件</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <%= attachment_image_tag post, :post_image, :fill, 100, 100 %>
                    </div>
                  </div>
                <% end %>
              <% end %>
              <!--▲最新投稿表示-->

            </div>
          </div>
          <!--▲タブ詳細-->

        </div>
        <!--▲タブ内容-->

      <!--▲未ログインユーザ表示内容-->
      <% end %>
    </div>
  </div>
</div>