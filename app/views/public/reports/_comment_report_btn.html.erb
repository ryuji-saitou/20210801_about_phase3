<% if comment.reported_by?(current_user, post) %>
  <%= link_to "通報済み", post_comment_comment_report_destroy_path(post_id: post.id, comment_id: comment.id), method: :delete, remote: true, class:"text-secondary small text-right ml-2", data: { confirm: "通報を取り消しますか？"} %>
<% else %>
  <%= link_to "通報", post_comment_comment_report_create_path(post_id: post.id, comment_id: comment.id), method: :post, remote: true, class:"text-secondary small text-right ml-2" %>
<% end %>