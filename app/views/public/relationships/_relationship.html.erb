<% if user_signed_in? && user != current_user && current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user_id: user.id), method: :delete, remote: true, class:"btn btn-sm btn-secondary text-white text-decoration-none", data: { confirm: "フォローを解除しますか？"} %>
<% elsif user_signed_in?  && user != current_user && !current_user.following?(user) %>
  <%= link_to "フォローする", user_relationships_path(user_id: user), method: :post, remote: true, class:"btn btn-sm btn-info text-white text-decoration-none" %>
<% end %>